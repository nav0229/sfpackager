<apex:page id="B2B_Footer_STEX"   controller="B2B_FooterControllerExt_STEX"    docType="html-5.0" sideBar="false" showHeader="false" standardStylesheets="false" cache="false" applyHtmlTag="false">


    
<script>
    jQuery(function($){
        let currSite = localStorage.getItem('siteParam');
        function getFooterLinksRA() {
            // if (!CCRZ.pagevars.isGuest){
                let remote = _.extend(CCRZ.RemoteInvocation, { className: 'B2B_FooterControllerExt_STEX'});
                remote.invokeCtx('getFooterLinksSite', currSite,
                (result) => {
                    if (result) {
                        let data = result.data;
                        $('#terms-of-use-link').attr('href', data.termsOfUseURL);
                        $('#privacy-policy-link').attr('href', data.privacyPolicyURL);
                        $('#accessibility-statement-link').attr('href', data.accessibilityStatementURL);
                        if (data.dealerTermsOfUseURL) {
                            $('#dealer-terms-of-use-link').attr('href', data.dealerTermsOfUseURL);
                            $('#dealer-terms-of-use-link').removeClass('hidden');
                        }
                    }
                },
                {
                    nmsp: false,
                    escape: false,
                    buffer: false
                });
            // }  
        }
        if (currSite) {
            CCRZ.pubSub.on('view:headerView:refresh', function () {
                if ($('#terms-of-use-link').attr('href')==='javascript:'){
                    getFooterLinksRA();
                }
            });
        }
    });   
</script>
    <div class="footer-copyright">
