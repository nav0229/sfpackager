        scsLiMCSS.className = ('slds-list__item');
        scsLiMCSSg.className = ('slds-list__item');            
      }
        try {
            scsLiSalesHistory_C.className = ('slds-list__item');
        } catch (ignore) {}
        try {
            scsLiSalesHistory_D.className = ('slds-list__item');
        } catch (ignore) {}
        try {
            scsLiSalesHistory_I.className = ('slds-list__item');
        } catch (ignore) {}
    }

    // on click for customer sales history link
    $( "#scsSalesHistoryLink_Customer" ).click(function(e) {

        e.preventDefault();
        e.stopPropagation();

        $( "#scsCurrencyChoices_C").slideToggle( "fast" );

    });

    // on click for dealer sales history link
    $( "#scsSalesHistoryLink_Dealer" ).click(function(e) {

        e.preventDefault();
        e.stopPropagation();

        $( "#scsCurrencyChoices_D").slideToggle( "fast" );

    });

    // on click for influencer sales history link
    $( "#scsSalesHistoryLink_Influencer" ).click(function(e) {

        e.preventDefault();
        e.stopPropagation();

        $( "#scsCurrencyChoices_I").slideToggle( "fast" );

    });

    // on-click for currency span fields
    $( "span" ).click(function(e) {
        elemId = $( this ).attr( "id" );
        crncyId = elemId.slice(4,5);
        currency = elemId.slice(0,3);
        slsHstryBtn = "scsSalesHistory_" + crncyId + "_Btn";

            console.log('elemId: ' + elemId + ' - crncyId: ' + crncyId + ' - currency: ' + currency);

        // change selected currency colors
        selectCurrency(elemId);

        $("#"+slsHstryBtn).removeClass("slds-hide").addClass("slds-show");

        document.getElementById(slsHstryBtn).innerHTML = "Open sales  history with " + currency;

    });

    // on-click for button elements
    $( "button" ).click(function(e) {

        elemId = $( this ).attr( "id" );

        if (elemId === "scsSalesHistory_C_Btn") {
            scsSalesHistoryLink_C = scsSalesHistoryLink_C_1 + siteId + scsSalesHistoryLink_C_2 + currency + scsSalesHistoryLink_C_3;
            window.open(scsSalesHistoryLink_C);
        } else if (elemId === "scsSalesHistory_D_Btn") {
            scsSalesHistoryLink_D = scsSalesHistoryLink_D_1 + siteId + scsSalesHistoryLink_D_2 + currency + scsSalesHistoryLink_D_3;
            window.open(scsSalesHistoryLink_D);
        } else if (elemId === "scsSalesHistory_I_Btn") {
            scsSalesHistoryLink_C = scsSalesHistoryLink_C_1 + siteId + scsSalesHistoryLink_C_2 + currency + scsSalesHistoryLink_C_3;
            window.open(scsSalesHistoryLink_C);
        }

    });

    // on click for information icons
    $( ".scsInfoIcon" ).click(function(e) {
        elemId = $( this ).attr( "id" );

        e.preventDefault();
        e.stopPropagation();

        elemId = elemId + "_help";
          $("#" + elemId).slideToggle( "fast" );

        console.log('elemid: ' + elemId);

    });
}

function selectCurrency(elemId) {

    var type;

    console.log('selectCurrency: type - ' + elemId);

    if (elemId != undefined || elemId != "") {

        type = elemId.slice(4,5);

        console.log('selectCurrency: type - ' + "#" + elemId);

        $( "#USD_" + type).css({"background-color": "#ffffff", "color": "#0070d2"});
        $( "#CAD_" + type).css({"background-color": "#ffffff", "color": "#0070d2"});
        $( "#EUR_" + type).css({"background-color": "#ffffff", "color": "#0070d2"});
        $( "#GBP_" + type).css({"background-color": "#ffffff", "color": "#0070d2"});

        $( "#" + elemId).css({"background-color": "#0070d2", "color": "#ffffff"});
    }
}

