}

function init() {

    var scsUltParentElm = document.getElementById('scsUltParent'),
        scsLiMCSS = document.getElementById('liMCSS'),
        scsLiMCSSg = document.getElementById('liMCSSg'),      
        scsLiSalesHistory_C = document.getElementById('liSalesHistory_Customer'),
        scsSalesHistoryLink_C_1 = "http://supplysync.steelcase.com/irj/servlet/prt/portal/prtroot/pcd!3aportal_content!2fcom.sap.pct!2fplatform_add_ons!2fcom.sap.ip.bi!2fiViews!2fcom.sap.ip.bi.bex?TEMPLATE=ZCRM_ACCOUNT_WT001&BI_COMMAND_1-BI_COMMAND_TYPE=SET_VARIABLES_STATE&BI_COMMAND_1-VARIABLE_VALUES-VARIABLE_VALUE_1-VARIABLE_TYPE=VARIABLE_INPUT_STRING&BI_COMMAND_1-VARIABLE_VALUES-VARIABLE_VALUE_1-VARIABLE_TYPE-VARIABLE_INPUT_STRING=",
        scsSalesHistoryLink_C_2 = "&BI_COMMAND_1-VARIABLE_VALUES-VARIABLE_VALUE_1-VARIABLE=ZULTSITE_MI_OPT_SING_V2&BI_COMMAND_2-BI_COMMAND_TYPE=SET_VARIABLES_STATE&BI_COMMAND_2-VARIABLE_VALUES-VARIABLE_VALUE_2-VARIABLE_TYPE=VARIABLE_INPUT_STRING&BI_COMMAND_2-VARIABLE_VALUES-VARIABLE_VALUE_2-VARIABLE_TYPE-VARIABLE_INPUT_STRING=",
        scsSalesHistoryLink_C_3 = "&BI_COMMAND_2-VARIABLE_VALUES-VARIABLE_VALUE_2-VARIABLE=ZFICURZM",
        currency = "USD",
        siteId = "{!Account.Site_Id__c}",
        scsLiSalesHistory_D = document.getElementById('liSalesHistory_Dealer'),
        scsSalesHistoryLink_D_1 = "http://supplysync.steelcase.com/irj/servlet/prt/portal/prtroot/pcd!3aportal_content!2fcom.sap.pct!2fplatform_add_ons!2fcom.sap.ip.bi!2fiViews!2fcom.sap.ip.bi.bex?TEMPLATE=ZCRM_ACCOUNT_WT002&BI_COMMAND_1-BI_COMMAND_TYPE=SET_VARIABLES_STATE&BI_COMMAND_1-VARIABLE_VALUES-VARIABLE_VALUE_1-VARIABLE_TYPE=VARIABLE_INPUT_STRING&BI_COMMAND_1-VARIABLE_VALUES-VARIABLE_VALUE_1-VARIABLE_TYPE-VARIABLE_INPUT_STRING=",
        scsSalesHistoryLink_D_2 = "&BI_COMMAND_1-VARIABLE_VALUES-VARIABLE_VALUE_1-VARIABLE=ZSITE_MRG_MI_MAND_SING_DLR&BI_COMMAND_2-BI_COMMAND_TYPE=SET_VARIABLES_STATE&BI_COMMAND_2-VARIABLE_VALUES-VARIABLE_VALUE_2-VARIABLE_TYPE=VARIABLE_INPUT_STRING&BI_COMMAND_2-VARIABLE_VALUES-VARIABLE_VALUE_2-VARIABLE_TYPE-VARIABLE_INPUT_STRING=",
        scsSalesHistoryLink_D_3 = "&BI_COMMAND_2-VARIABLE_VALUES-VARIABLE_VALUE_2-VARIABLE=ZFICURZM",
        scsLiSalesHistory_I = document.getElementById('liSalesHistory_Influencer'),
        scsActHrchy, elemid, crncyId, slsHstryBtn, scsSalesHistoryLink_C, scsSalesHistoryLink_D, scsAcctType;

    siteId = siteId.replace(/^0+/, '');


    scsActHrchy = "{!Account.Account_Hierarchy__c}"; //Account_Hierarchy__c= "U1",Account_Hierarchy__c= NULL
    scsAcctType = "{!Account.RecordTypeId}"; //Customer, Dealer, Influencer

    // Ultimate Parent links
